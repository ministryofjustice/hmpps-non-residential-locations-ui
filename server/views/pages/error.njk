{% extends "../partials/layout.njk" %}

{% set pageTitle = applicationName + " - Error" %}
{% set mainClasses = "app-container govuk-body" %}
{% set backLink = null %}

{% block content %}
  {% if message === 'production' %}
    <div class="govuk-width-container">
      <div class="govuk-grid-row">
        <div class="govuk-grid-column-two-thirds">
          <h1 class="govuk-heading-l">Sorry, there is a problem with this service</h1>
          <p>
            Try again later.
          </p>

          <p>
            Any information you entered has not been saved. You will need to start again.
          </p>

          <p>
            <a href="/">Return to Residential locations</a>
          </p>
        </div>
      </div>
    </div>
  {% else %}      
    <h1>{{ message }}</h1>
    <h2>{{ status }}</h2>
    <pre>{{ stack }}</pre>
  {% endif %}
{% endblock %}
